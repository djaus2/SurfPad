<Page
    x:Class="roundedbox.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:roundedbox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:src1="using:roundedbox.uc"
    mc:Ignorable="d">

    <Page.Resources>
        <SolidColorBrush x:Key="MyBrush" Color="Gold"/>
        <Style TargetType="RowDefinition" x:Key="HeightPad">
            <Setter Property="Height" Value="5"/>
        </Style>
        <Style TargetType="RowDefinition" x:Key="HeightBox">
            <Setter Property="Height" Value="100"/>
        </Style>
        <Style TargetType="ColumnDefinition" x:Key="WidthPad">
            <Setter Property="Width" Value="5"/>
        </Style>
        <Style TargetType="ColumnDefinition" x:Key="WidthBox">
            <Setter Property="Width" Value="1oo"/>
        </Style>
        <GridLength x:Key="TableRowHeight">22</GridLength>
    </Page.Resources>


